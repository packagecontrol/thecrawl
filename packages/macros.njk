{% macro labels(platforms, labels) %}
  <ul class="button-group labels">
    {% for platform in platforms %}
      {% set q = 'platform:"' ~ platform ~ '"' %}
      <li>
        <a class="button platform platform-{{ platform }}" href="/?q={{ q | urlencode }}">
          {{ platform }}
        </a>
      </li>
    {% endfor %}

    {% for label in labels %}
      {% set q = 'label:"' ~ label ~ '"' %}
      <li>
        <a class="button label" href="/?q={{ q | urlencode }}">
          {{ label }}
        </a>
      </li>
    {%- endfor %}
  </ul>
{% endmacro %}

{% macro stars(count) %}
  {% if count > 0 %}
    <dl title="{{ count }} {{ 'star' if count < 2 else 'stars' }} on GitHub">
      <dt aria-label="stars">{{ logo('star') }}</dt>
      <dd class="stars">{{ count }}</dd>
    </dl>
  {% endif %}
{% endmacro %}

{% macro card(pkg) %}
  <div class="card">
    <h3>
      <a href="/packages/{{ pkg.name | urlencode }}/">
        {{ pkg.name }}
      </a>
    </h3>
    <p>by {% for author in pkg.author -%}
      {{ author }}{{ ", " if not loop.last }}
    {%- endfor %}</p>

    {{ stars(pkg.stars) }}
    {{ labels(pkg.platforms, pkg.labels) }}
  </div>
{% endmacro %}

